<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/antButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ant"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/duckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duck"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/eagleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eagle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/elephantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Elephant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duckButton" />

    <TextView
        android:id="@+id/showResultFlyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fly"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showResultColorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showResultFlyTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>